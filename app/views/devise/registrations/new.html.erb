<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if params[:plan] == '2' %>
        <h1 class="text-center">Pro Account</h1>
        <p class="text-center">Sign up for $10/month and get access to potatoes that speak to you. Sorta.</p>
      <% else %>
        <h1 class="text-center">Basic Account</h1>
        <p class="text-center">Sign up for free and get access to the coolest potatoes ever. Limited time offer.</p>
      <% end %>

      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
